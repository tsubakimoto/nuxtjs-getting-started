{
    // IntelliSense を使用して利用可能な属性を学べます。
    // 既存の属性の説明をホバーして表示します。
    // 詳細情報は次を確認してください: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "compounds": [
        {
            "name": "fullstack: nuxt",
            "configurations": [
                "server: nuxt",
                "client: edge"
            ]
        }
    ],
    "configurations": [
        {
            "name": "client: edge",
            "type": "msedge",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "server: nuxt",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "dev",
                "--open"
            ],
            "console": "integratedTerminal"
        }
    ]
}